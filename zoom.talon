# keyword: switch
key(ctrl-alt-shift-cmd-s):
    speech.toggle()
    # zoom global mute toggle
    # custom setting; must enable globally
    key(shift-f2)

# keyword: talon
# for when they get out of sync
key(ctrl-alt-shift-cmd-t):
    speech.toggle()

# keyword: zoom
key(ctrl-alt-shift-cmd-z):
    # zoom global mute toggle
    key(shift-f2)
